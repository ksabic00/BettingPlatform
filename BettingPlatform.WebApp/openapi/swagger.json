{
  "openapi": "3.0.1",
  "info": {
    "title": "BettingPlatform.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Offers/active": {
      "get": {
        "tags": [
          "Offers"
        ],
        "parameters": [
          {
            "name": "asOfUtc",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OfferDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OfferDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OfferDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Players": {
      "post": {
        "tags": [
          "Players"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            }
          }
        }
      }
    },
    "/api/Tickets": {
      "post": {
        "tags": [
          "Tickets"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceTicketCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceTicketCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceTicketCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TicketPlacedDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TicketPlacedDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TicketPlacedDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Tickets/player/{playerId}": {
      "get": {
        "tags": [
          "Tickets"
        ],
        "parameters": [
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TicketSummaryDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TicketSummaryDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TicketSummaryDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Tickets/{ticketId}": {
      "get": {
        "tags": [
          "Tickets"
        ],
        "parameters": [
          {
            "name": "ticketId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TicketDetailDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TicketDetailDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TicketDetailDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Wallet/{playerId}": {
      "get": {
        "tags": [
          "Wallet"
        ],
        "parameters": [
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/Wallet/deposit": {
      "post": {
        "tags": [
          "Wallet"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DepositCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/DepositCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/DepositCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreatePlayerCommand": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "DepositCommand": {
        "type": "object",
        "properties": {
          "playerId": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "OfferCategory": {
        "enum": [
          "Regular",
          "Top"
        ],
        "type": "string"
      },
      "OfferDto": {
        "type": "object",
        "properties": {
          "offerId": {
            "type": "string",
            "format": "uuid"
          },
          "matchId": {
            "type": "string",
            "format": "uuid"
          },
          "homeTeam": {
            "type": "string",
            "nullable": true
          },
          "awayTeam": {
            "type": "string",
            "nullable": true
          },
          "startsAtUtc": {
            "type": "string",
            "format": "date-time"
          },
          "marketCode": {
            "type": "string",
            "nullable": true
          },
          "category": {
            "$ref": "#/components/schemas/OfferCategory"
          },
          "outcomes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OfferOutcomeDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "OfferOutcomeDto": {
        "type": "object",
        "properties": {
          "outcomeTemplateId": {
            "type": "string",
            "format": "uuid"
          },
          "outcomeCode": {
            "type": "string",
            "nullable": true
          },
          "odds": {
            "type": "number",
            "format": "double"
          },
          "isEnabled": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PlaceTicketCommand": {
        "type": "object",
        "properties": {
          "playerId": {
            "type": "string",
            "format": "uuid"
          },
          "stake": {
            "type": "number",
            "format": "double"
          },
          "selections": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PlaceTicketSelectionDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PlaceTicketSelectionDto": {
        "type": "object",
        "properties": {
          "offerId": {
            "type": "string",
            "format": "uuid"
          },
          "outcomeTemplateId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "TicketDetailDto": {
        "type": "object",
        "properties": {
          "ticketId": {
            "type": "string",
            "format": "uuid"
          },
          "createdAtUtc": {
            "type": "string",
            "format": "date-time"
          },
          "stakeGross": {
            "type": "number",
            "format": "double"
          },
          "stakeNet": {
            "type": "number",
            "format": "double"
          },
          "combinedOdds": {
            "type": "number",
            "format": "double"
          },
          "potentialPayout": {
            "type": "number",
            "format": "double"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "selections": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TicketSelectionLineDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TicketPlacedDto": {
        "type": "object",
        "properties": {
          "ticketId": {
            "type": "string",
            "format": "uuid"
          },
          "stakeGross": {
            "type": "number",
            "format": "double"
          },
          "feeAmount": {
            "type": "number",
            "format": "double"
          },
          "stakeNet": {
            "type": "number",
            "format": "double"
          },
          "combinedOdds": {
            "type": "number",
            "format": "double"
          },
          "potentialPayout": {
            "type": "number",
            "format": "double"
          },
          "selectionCount": {
            "type": "integer",
            "format": "int32"
          },
          "balanceAfter": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "TicketSelectionLineDto": {
        "type": "object",
        "properties": {
          "homeTeam": {
            "type": "string",
            "nullable": true
          },
          "awayTeam": {
            "type": "string",
            "nullable": true
          },
          "outcomeCode": {
            "type": "string",
            "nullable": true
          },
          "oddAtPlacement": {
            "type": "number",
            "format": "double"
          },
          "categoryAtPlacement": {
            "$ref": "#/components/schemas/OfferCategory"
          }
        },
        "additionalProperties": false
      },
      "TicketSummaryDto": {
        "type": "object",
        "properties": {
          "ticketId": {
            "type": "string",
            "format": "uuid"
          },
          "createdAtUtc": {
            "type": "string",
            "format": "date-time"
          },
          "stakeGross": {
            "type": "number",
            "format": "double"
          },
          "stakeNet": {
            "type": "number",
            "format": "double"
          },
          "combinedOdds": {
            "type": "number",
            "format": "double"
          },
          "potentialPayout": {
            "type": "number",
            "format": "double"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "selectionCount": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "WalletDto": {
        "type": "object",
        "properties": {
          "playerId": {
            "type": "string",
            "format": "uuid"
          },
          "balance": {
            "type": "number",
            "format": "double"
          },
          "lastTransactions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WalletTransactionDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WalletTransactionDto": {
        "type": "object",
        "properties": {
          "occurredAtUtc": {
            "type": "string",
            "format": "date-time"
          },
          "type": {
            "$ref": "#/components/schemas/WalletTransactionType"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "referenceId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WalletTransactionType": {
        "enum": [
          "Deposit",
          "BetStakeDebit",
          "BetFeeDebit",
          "BetPayoutCredit",
          "Refund"
        ],
        "type": "string"
      }
    }
  }
}